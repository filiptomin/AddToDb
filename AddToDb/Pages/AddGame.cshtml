@page
@model AddToDb.Pages.AddGameModel
@{
    ViewData["Title"] = "AddGame";
}

<h2>AddGame</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GVM.Title" class="control-label"></label>
                <input asp-for="GVM.Title" class="form-control" />
                <span asp-validation-for="GVM.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GVM.Autors" class="control-label"></label>
                <input asp-for="GVM.Autors" class="form-control" />
                <span asp-validation-for="GVM.Autors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GVM.ReleaseDay"></label>
                <input asp-for="GVM.ReleaseDay" class="form-control" />
                <span asp-validation-for="GVM.ReleaseDay" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
